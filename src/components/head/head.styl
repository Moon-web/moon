@import "../../common/common.styl"
.head
  width 100%
  height 30px
  background-color #f2f2f2
  border-bottom 1px solid #e1e1e1
  cursor default
  .head-center
    width 1200px
    height 100%
    margin  0 auto
    .item
      display inline-block
      vertical-align top
      width auto
      height 100%
      font-size 12px
      color #333
      line-height 30px
      cursor default
    .other-information
      float right
      width auto
      height 100%
      font-size 0
      .item
        display inline-block
        vertical-align top
        height 12px
        line-height 12px
        font-size 12px
        color #333
        margin-top 9px
        padding 0 10px
        border-right 1px solid #333
        cursor pointer
        .phone-num
          mainColor()
          font-weight bold
        &:last-child
          border-right none
          padding-right 0
          padding-left 40px
        &.phone
          margin-left 38px
          .number
            mainColor()
            font-weight bold
        &.favorite
          border-right none
      .loginState
        float left
        width auto
        height 100%
        .loginOut
          width auto
          height 100%
          font-size 0
          .list
            display inline-block
            vertical-align top
            width auto
            height 100%
            font-size 12px
            color #333
            line-height 30px
            cursor default
          .hover
            display inline-block
            vertical-align top
            margin-top 9px
            padding 0 10px
            border-right 1px solid #333
            line-height 1em
            height 12px
            &:hover
              mainColor()
              cursor pointer
