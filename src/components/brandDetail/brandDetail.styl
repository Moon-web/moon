@import "../../common/common.styl"
.brabdDetail-center
  width 100%
  height auto
  mainTopBorder(3px,solid)
  background #f5f5f5
  .brandDetail-con
    width 1200px
    height auto
    margin 0 auto
    padding-bottom 50px
    .path
      width 100%
      height 54px
      line-height 54px
      font-size 14px
      color #333
  .compony
    height auto
    width 100%
    .compony-bottom
      width 100%
      height auto
      margin-top 48px
      overflow hidden
      box-sizing border-box
      .box
        width 100%
        height auto
        background #fff
        overflow hidden
        .compony-bottom-left
          width 190px
          height 100%
          margin-right 35px
          overflow hidden
          float left
          .commony-img
            height 100px
            width 190px
            box-sizing border-box
            border 1px solid #f5f5f5
            background-repeat no-repeat
            background-position center
            background-size cover
          .commony-img[lazy=loading]
            background-size contain
          .commony-img[lazy=error]
            background-size contain
        .compony-bottom-right
          width 975px
          float left
          .compony-bottomR-top
            width 100%
            height 100px
            .commony-name
              float left
              height 100%
              box-sizing border-box
              font-weight normal
              padding-top 26px
              box-sizing border-box
              .title
                font-size 24px
                color #333
                margin-bottom 16px
              .statu
                margin-bottom 18px
                color #999
                font-size 14px
                span
                  float left
                  margin-bottom 18px
                  margin-right 35px
                  .type-con
                    color #666
                .address
                  margin 0
            .collect
              float right
              position relative
              margin-right 20px
              height 100%
              .btn-collect
                height 20px
                float left
                line-height 20px
                margin-top 30px
                text-align center
                box-sizing border-box
                z-index 3
                font-size 14px
                font-weight bold
                cursor pointer
                mainColor()
              .btn-collectBg
                width 20px
                height 20px
                margin 30px 5px 0 0
                float left
                background url("resource/icon_collect.png") no-repeat left center
              .canclecollect
                background url("resource/icon_collect2.png") no-repeat left center
      .componybottomR-botoom
        width 100%
        margin-top 10px
        height auto
        padding 20px
        background #fff
        box-sizing border-box
        .compony-con
          height auto
          width 100%
          margin-bottom 20px
          box-sizing border-box
          position relative
          .introduce
            height 40px
            line-height 40px
            font-size 14px
            color #333
            text-align center
            //border-bottom 1px solid #ededed
            .introduce-item
              float left
              width 90px
              height 100%
              margin-top -1px
              cursor pointer
              color #333333
              font-size 16px
              font-weight bold
          .compony-content
            width 100%
            height auto
            .compony-introduceCon
              width 100%
              height auto
              padding-bottom 30px
              .con-introduce
                color #666
                font-size 14px
                line-height 25px
              .lookMore
                height 50px
                width 100%
                position absolute
                right 20px
                bottom 0px
                .more
                  float right
                  height 100%
                  line-height 50px
                  color #2c9cf0
                  cursor pointer
                  &:hover
                    mainColor()
  .compony-product
    width 100%
    margin 20px 0
    box-sizing border-box
    height auto
    overflow hidden
    background #fff
    padding-top 20px
    .product-title
      height 75px
      width 210px
      margin 0 auto
      position relative
      .leftBg
        position absolute
        left 0px
        top 50%
        margin-top -3px
        width 35px
        height 5px
        mainBack()
      .cname
        font-size 20px
        color #333
        float left
        font-weight 600
        margin-bottom 7px
        width 100%
        margin-top 20px
        text-align center
      .ename
        font-size 12px
        color #999
        float left
        width 100%
        text-align center
      .rightBg
        width 35px
        height 5px
        mainBack()
        position absolute
        right 0px
        top 50%
        margin-top -3px
    .product-con
      width 100%
      height auto
      overflow hidden
      margin-bottom 30px
      padding 0 66px
      box-sizing border-box
      .product-item
        width 210px
        height 310px
        float left
        margin 30px 76px 0px 0
        box-sizing border-box
        &:nth-child(4n+4)
          margin-right 0
        .item-img
          width 100%
          height 210px
          border 1px solid #ddd
          box-sizing border-box
          cursor pointer
          .pro-img
            display block
            width 100%
            height 100%
            background-size cover
            background-repeat no-repeat
            background-position center
          .pro-img[lazy=loading]
            background-size contain
          .pro-img[lazy=error]
            background-size contain
        .price-content
          width 100%
          height 50px
          padding 0 5px
          box-sizing border-box
          .content
            line-height 24px
            overflow hidden
            font-size 12px
            color #666
            margin-top 10px
        .order
          height 30px
          width 100%
          box-sizing border-box
          padding 0 5px
          .orderPrice-con
            float left
            width 50%
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            line-height 30px
            font-size 12px
            mainColor()
            .order-price
              font-size 18px
          .successNum
            float right
            height 100%
            text-align right
            width 50%
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            line-height 30px
            font-size 14px
            color #999
    .page-wrapper
      margin-bottom 30px
      .page-content
        width 1180px
        height 24px
        text-align center
        font-size 0
        .changePage
          display inline-block
          vertical-align top
          width auto
          height 100%
          padding 0 5px
          font-size 12px
          color #fff
          mainBack()
          text-align center
          line-height 24px
          border-radius 1px
          cursor pointer
          &.end
            background #e9e9e9
            color #666
            border-radius 1px
            cursor default
        .pageFlag
          display inline-block
          vertical-align top
          padding 0 10px
          font-size 12px
          color #999
          line-height 24px
        .linkPage
          display inline-block
          vertical-align top
          width auto
          height 100%
          .entry-wrapper
            display inline-block
            vertical-align top
            width 50px
            height 100%
            box-sizing border-box
            border 1px solid #e1e1e1
            margin-left 20px
            .entry
              width 100%
              height 100%
              border none
              text-align center
          .tag
            display inline-block
            vertical-align top
            padding 0 5px
            line-height 24px
            color #999
            font-size 12px
            cursor default
          .confirm
            display inline-block
            height 100%
            padding 0 10px
            mainBack()
            color #fff
            font-size 12px
            line-height 24px
            margin-left 15px
            border-radius 1px
            cursor pointer
