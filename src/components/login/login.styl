@import "../../common/common.styl"
.logo
  height 120px
  width 1200px
  margin 0 auto
  .logoLogin
    width 300px
    height 100%
    cursor pointer
    background url("resource/LOGO.png") no-repeat left center
.login-con
  100%
  height 474px
  background url("resource/login.jpg") no-repeat center
  box-sizing border-box
  border 1px solid #e1e1e1
  .login-content
    width 1200px
    margin 0 auto
    height 100%
    position relative
    .login-center
      width 320px
      position absolute
      right 100px
      height 350px
      top 62px
      padding 0 25px
      box-sizing border-box
      background #fff
      .login-top
        width 100%
        height 62px
        padding-top 26px
        box-sizing border-box
        .login-title
          float left
          height 100%
          line-height 36px
          margin-left 10px
        .register
          float right
          height 100%
          line-height 36px
          right 10px
          color #ff9c00
          background url("resource/zhu.png") no-repeat left center
          padding-left 20px
          cursor pointer
          &:hover
            mainColor()
      .entry
        width 100%
        height 36px
        margin-top 30px
        border 1px solid #ccc
        box-sizing border-box
        .entryBg
          float left
          height 26px
          width 30px
          margin-top 5px
          border-right 1px solid #cccccc
          background url("resource/phone.png") no-repeat center
        input
          float left
          width 235px
          height 36px
          border none
          outline none
          background none
          padding-left 10px
          box-sizing border-box
      .entry-pw
        width 100%
        height 36px
        margin-top 30px
        border 1px solid #ccc
        box-sizing border
        .entryBg
          float left
          height 26px
          width 30px
          margin-top 5px
          border-right 1px solid #cccccc
          background url("resource/pw.png") no-repeat center
        input
          float left
          width 238px
          height 36px
          border none
          outline none
          background none
          padding-left 10px
          box-sizing border-box
      .forget
        width 100%
        height 36px
        margin-top 20px
        .forget-pw
          float left
          height 100%
          line-height 36px
          cursor pointer
          margin-left 10px
        .memory-pw
          float right
          margin-right 10px
          height 100%
          line-height 36px
          input
            border 1px solid #ccc
            width 15px
            height 15px
            margin-top 2px
            -webkit-appearance checkbox
      .button
        width 100%
        height 36px
        margin-top 20px
        input
          border none
          width 100%
          height 100%
          background #19ac27
          color #fff
          border-radius 5px
          cursor pointer


.login-bottom
  width 100%
  padding 40px 0
  .bottom-list
    text-align center
    font-size 12px
    color #333
    margin-bottom 14px
    .list
      padding 0 24px
      color #333
      font-size 12px
      border-right 1px solid #e1e1e1
      &:last-child
        border-right none
    .hover:hover
      mainColor()
      cursor pointer
  .bottom-listp
    text-align center
    font-size 12px
    color #333
