@import "../../common/common.styl"
.news-parent
  width 100%
  height auto
  .news-list
    width 100%
    height auto
    background-color #f5f5f5
    .news-list-center
      width 1200px
      height auto
      margin 0 auto
      padding 50px 0 98px 0
      overflow hidden
      .news-nav
        width 316px
        height auto
        float left
        .nav-box
          width 100%
          height auto
          .nav-item-wrapper
            width 100%
            height auto
            box-sizing border-box
            border 1px solid #e1e1e1
            .nav-item
              width 100%
              height 54px
              border-bottom 1px solid #e1e1e1
              text-align center
              line-height 54px
              background-color #fff
              box-sizing border-box
              border-bottom 1px solid #e1e1e1
              font-size 18px
              color #333
              cursor pointer
              &.active
                position relative
                background-color #f0f0f0
                cursor default
                &:before
                  content ''
                  position absolute
                  display inline-block
                  width 4px
                  height 53px
                  left 0
                  top 0
                  mainBack()
              &:last-child
                border-bottom none
        .UpToData-news
          width 100%
          height auto
          margin-top 40px
          font-size 0
          .title
            display inline-block
            vertical-align top
            font-size 16px
            color #333333
            margin-bottom 14px
          .upToData-wrapper
            width 100%
            height auto
            box-sizing border-box
            border 1px solid #e1e1e1
            padding 24px 28px 30px 28px
            background-color #fff
            .first-upToData
              cursor pointer
              .picture
                display inline-block
                vertical-align top
                width 100%
                height 154px
                overflow hidden
                background-size cover
                background-position center
                background-repeat no-repeat
              .picture[lazy=error]
                background-size auto
              .picture[lazy=loading]
                background-size auto
              .name
                display inline-block
                vertical-align top
                width 100%
                font-size 14px
                color #666
                line-height 23px
                text-align center
                padding 14px 0 18px 0
                border-bottom 1px solid #e1e1e1
          .other-upToData
            width 100%
            height auto
            .other-upToData-item
              width 100%
              font-size 14px
              overflow hidden
              text-overflow ellipsis
              white-space nowrap
              letter-spacing 1px
              color #666
              margin-top 14px
              cursor pointer
              &:hover
                color #2c9cf0
              &:before
                content ''
                display inline-block
                vertical-align top
                width 6px
                height 6px
                background-color #2c9cf0
                margin-top 4px
                margin-right 10px
                border-radius 50%
      .news-content
        width 842px
        height auto
        float right



