@import "../../common/common.styl"
.nav
  width 100%
  height 160px
  background-color #fff
  .nav-center
    width 1200px
    height 100%
    margin 0 auto
    .nav-top
      width 100%
      height 120px
      font-size 0
      .logo
        display inline-block
        vertical-align top
        width 220px
        height 100%
        background-repeat no-repeat
        background-position center
        background-image url("resource/LOGO.png")
        cursor pointer
      .search
        display inline-block
        vertical-align top
        margin-left 160px
        width 560px
        height 40px
        box-sizing border-box
        mainBorder(2px, solid)
        margin-top 55px
        font-size 0
        float right
        .search-input
          display inline-block
          vertical-align top
          width auto
          height 100%
          position relative
          .tag
            display inline-block
            vertical-align top
            width 78px
            height 100%
            text-align center
            font-size 0
            position relative
            .tag-target
              display inline-block
              vertical-align top
              width 100%
              height 100%
              line-height 36px
              font-size 14px
              color #666
              cursor default
              box-sizing border-box
              border-right 1px solid #e6e6e6
              &:after
                content ''
                display inline-block
                vertical-align top
                width 9px
                height 5px
                margin-top 15px
                margin-left 10px
                background-repeat no-repeat
                background-position center
                background-image url("resource/icon_xiala.png")
            .tag-choice
              display inline-block
              vertical-align top
              position absolute
              top 36px
              left 0
              width 78px
              box-sizing border-box
              border 1px solid #e1e1e1
              .choice-list
                display inline-block
                vertical-align top
                width 100%
                color #666
                text-align center
                background-color #fff
                font-size 12px
                padding 10px 0
                border-bottom 1px solid #e1e1e1
                cursor pointer
                &:last-child
                  border-bottom none
          .input
            display inline-block
            vertical-align top
            width 430px
            height 100%
            overflow hidden
            input
              width 100%
              height 100%
              border none
              font-size 16px
              color #666
              text-indent 10px
          .search-input-title
            position absolute
            width 100%
            height 26px
            top -28px
            left -2px
            .item
              float left
              height 100%
              width 80px
              text-align center
              line-height 26px
              font-size 14px
              color #333
              cursor pointer
              &.active
                color #fff
                mainBack()
        .search-button
          display inline-block
          vertical-align top
          width 126px
          height 100%
          mainBack()
          color #fff
          font-size 16px
          text-align center
          line-height 36px
          font-weight 600
          cursor pointer
          &::first-letter
            margin-right 10px
    .nav-bot
      width 100%
      height 40px
      font-size 0
      .product-nav
        float left
        width 220px
        height 100%
        position relative
        .operation-wrapper
          width 100%
          height 100%
          iBlock()
          mainBack()
          color #fff
          line-height 40px
          font-size 16px
          cursor pointer
          &:before
            display inline-block
            vertical-align top
            content ''
            width 18px
            height 14px
            margin-left 20px
            margin-top 14px
            margin-right 16px
            background-repeat no-repeat
            background-size 100%
            background-image url("resource/icon_F_0.png")
        .product-nav-wrapper
          position absolute
          top 40px
          left 0
          z-index 99
          width 100%
      .page-nav
        float left
        width auto
        height 100%
        z-index 99
        position relative
        .nav-box
          width auto
          height 100%
          font-size 0
          .item
            display inline-block
            vertical-align top
            width auto
            margin-left 70px
            font-size 16px
            color #333
            line-height 40px
            box-sizing border-box
            &:hover
              .hot
                transform translateY(-2px)
                -webkit-transform translateY(-2px)	/* Safari 和 Chrome */
                -moz-transform translateY(-2px)
                -o-transform translateY(-2px)
            .provincialNav
              position absolute
              width auto
              left -170px
              top 30px
              height auto
              .secondNav-wrapper
                height 100%
                padding-top 30px
                width auto
                box-sizing border-box
                .secondNav-container
                  height 100%
                  padding-top 20px
                  box-sizing border-box
                  width auto
                  mainBack()
                  position relative
                  border-radius 5px
                  max-width 842px
                  .secondNav-box
                    width auto
                    height 100%
                    font-size 0
                    padding 0 10px
                    box-sizing border-box
                    overflow hidden
                    .secontNav-item
                      float left
                      height 26px
                      width auto
                      line-height 26px
                      color #fff
                      text-align center
                      margin-bottom 20px
                      padding-left 31px
                      box-sizing border-box
                      &:after
                        content ''
                        display inline-block
                        vertical-align top
                        width 1px
                        height 18px
                        background #fff
                        margin-top 4px
                      &:last-child
                        &:after
                          content ''
                          display inline-block
                          vertical-align top
                          width 0px
                          height 0px
                          background #fff
                          margin-top 4px
                      &:nth-child(6n+6)
                        &:after
                          content ''
                          display inline-block
                          vertical-align top
                          width 0px
                          height 0px
                          background #fff
                          margin-top 4px
                      .item
                        display inline-block
                        vertical-align top
                        width auto
                        padding 0 12px
                        margin-left 0px
                        margin-right 30px
                        height 100%
                        color #fff
                        line-height 26px
                        text-align center
                        border-radius 3px
                        cursor pointer
                        &:hover
                          background #fff
                          mainColor()
                        &.active
                          background #fff
                          mainColor()
                  .province-more
                    position absolute
                    height 26px
                    width 137px
                    right 0px
                    bottom 20px
                    line-height 26px
                    font-size 16px
                    color #fff
                    text-align center
                    cursor pointer
                    background url("resource/icon_gengduo.png") no-repeat 30px center
            a
              display inline-block
              width 100%
              height 60%
              box-sizing border-box
              color #333
              padding 0 5px
              &:hover
                mainColor()
              &.router-link-active
                height 40px
                box-sizing border-box
                mainBottomBorder(3px,solid)
                mainColor()
            .hot
              position absolute
              width 16px
              height 20px
              top -8px
              left 240px
              background url("resource/icon_hot.png") no-repeat center
              transition transform 1s
              -moz-transition transform 1s	/* Firefox 4 */
              -webkit-transition transform 1s	/* Safari 和 Chrome */
              -o-transition transform 1s	/* Opera */
            .biao
              position absolute
              width 16px
              height 20px
              bottom -25px
              left 200px
              background url("resource/icon_biaoqianlan.png") no-repeat center

  .provincial-mark-wrapper
    position fixed
    left 0px
    top 0px
    right 0px
    bottom 0px
    z-index 999999
    background rgba(0,0,0,0.5)
    .provincial-mark
      position fixed
      width 800px
      height auto
      top 220px
      left 50%
      margin-left -400px
      background #fff
      border-radius 5px
      .provincial-mark-title
        width 100%
        height 50px
        line-height 50px
        background #f2f2f2
        overflow hidden
        .provincial-mark-title-con
          float left
          background url("resource/icon_hot.png") no-repeat 20px center
          font-size 14px
          padding-left 45px
          box-sizing border-box
          height 100%
        .provincial-mark-close
          float right
          height 100%
          width 50px
          background url("resource/icon_close.png") no-repeat center
      .provincial-mark-content
        width 100%
        height auto
        padding 25px 25px 100px
        box-sizing border-box
        .provincial-mark-content-list
          width 100%
          height auto
          overflow hidden
          .provincial-mark-content-item
            float left
            padding 0 15px
            height 24px
            line-height 24px
            font-size 14px
            cursor pointer
            margin 0 20px 20px 0
            &:hover
              mainBack()
              color #fff
            &.provincial-mark-content-item-active
              mainBack()
              color #fff
