@import "../../common/common.styl"
.content-wrapper
  width 100%
  height auto
  .banner-wrapper
    width 100%
    height 440px
    .background-item
      iBlock()
      width 100%
      height 100%
      background-position center
      background-repeat no-repeat
      background-size cover
      &[lazy=loading]
        background-size auto
      &[lazy=error]
        background-size auto
  .introduce
    width 1200px
    height auto
    margin 0 auto
    padding 80px 0
    overflow hidden
    .introduce-item
      float left
      width 560px
      height 410px
      background-color #fff
      box-sizing border-box
      border 1px solid #e1e1e1
      margin-right 60px
      margin-bottom 60px
      cursor default
      &:nth-child(2n+2)
        margin-right 0
      &:nth-child(n+2)
        margin-bottom 0
      .item-top
        width 100%
        height 320px
        background-repeat no-repeat
        background-position center
        background-size cover
        cursor pointer
        &[lazy=error]
          background-size auto
        &[lazy=loading]
          background-size auto
      .item-bot
        width 100%
        height 88px
        text-align center
        line-height 88px
        font-size 24px
        color #333


  .specialist
    width 1200px
    height auto
    margin 0 auto
    .specialist-title
      width 100%
      height auto
      font-size 0
      text-align center
      .title
        iBlock()
        width auto
        height 30px
        font-size 26px
        line-height 30px
        color #333
        &:before
          content ''
          iBlock()
          width 34px
          height 100%
          background-repeat no-repeat
          background-position center
          background-image url("resource/icon_expert.png")
          margin-right 18px



    .specialist-wrapper
      width 100%
      height auto
      padding 80px 0
      .content
        width 100%
        height 320px
        position relative
        overflow hidden
        &:hover
          .swiper-button-prev
            display block
          .swiper-button-next
            display block
        .content-item
          float left
          width 248px
          height 320px
          box-sizing border-box
          border 1px solid #e1e1e1
          position relative
          margin-right 69px
          &:last-child
            margin-right 0
          .picture
            display block
            width 100%
            height 100%
            background-repeat no-repeat
            background-position center
            background-size cover
            &[lazy=error]
              background-size auto
            &[lazy=loading]
              background-size auto
          .name
            width 100%
            height 50px
            position absolute
            bottom 0
            left 0
            z-index 1
            background-color rgba(0,0,0,0.6)
            text-align center
            line-height 50px
            font-size 18px
            color #fff
        .swiper-button-prev
          display none
        .swiper-button-next
          display none

