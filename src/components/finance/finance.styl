@import "../../common/common.styl"
.finance-wrapper
  width 100%
  height auto
  .swiper-wrapper
    width 100%
    height 440px
    position relative
    .banner-wrapper
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      z-index 0
      overflow hidden
      .banner-content
        width 1200px
        height 100%
        margin 0 auto
        .banner-box
          width 100%
          height 100%
          position relative
          left -360px
          top 0
          .banner-contentBox
            width 1920px
            height 100%
            .background-item
              iBlock()
              width 100%
              height 100%
              background-position center
              background-size cover
              background-repeat no-repeat
            .background-item[lazy=loading]
              background-size auto
            .background-item[lazy=error]
              background-size auto
      .click-btn
        display none
      &:hover
        .click-btn
          display block
        .swiper-pagination
          bottom 10px
          left 50%
  .finance-container
    width 100%
    height auto
    .finance-box1
      width 1200px
      height 700px
      margin 0 auto
      background url("resource/finance01.jpg") no-repeat center
    .finance-box2
      width 100%
      height 370px
      background url("resource/finance02.jpg") no-repeat center
    .finance-box3
      width 1200px
      height 1400px
      margin 0 auto
      background url("resource/finance03.jpg") no-repeat center
