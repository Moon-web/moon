.buy
  display inline-block
  vertical-align top
  width auto
  .model
    display inline-block
    vertical-align top
    font-size 12px
    color #333
    margin-right 20px
  .total
    display inline-block
    vertical-align top
    font-size 12px
    color #333
    margin-right 40px

  .operation
    display inline-block
    vertical-align top
    width 120px
    height 30px
    box-sizing border-box
    border 1px solid #e1e1e1
    border-radius 3px
    .crease
      display inline-block
      vertical-align top
      width 28px
      height 28px
      background-color #fafafa
      overflow hidden
      cursor pointer
      font-size 14px
      text-align center
      line-height 28px
      font-weight bold
      user-select none
      &.none
        color #cbcbcb
        cursor default
        position relative
    .input
      display inline-block
      vertical-align top
      height 28px
      background-color #fff
      input
        width 100%
        height 100%
        border none
        text-align center
        font-size 12px
        color #666
        vertical-align top
        padding 0
  .inventory-total
    font-size 12px
    color #333
    margin-left 10px
