@import "../../common/common.styl"
.pagePath
  width 100%
  font-size 0
  .path-ul
    font-size 14px
    color #333
    .path-li
      display inline-block
      vertical-align top
      cursor pointer
      &:hover
        mainColor()
      &:after
        content '>'
        display inline-block
        vertical-align top
        font-size 14px
        color #333
      &:last-child
        cursor default
        color #333
        &:after
          content ''
          display none
