@import "../../common/common.styl"
.swiper-wrapper
  width 100%
  height 414px
  position relative
  .banner-wrapper
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    z-index -1
    overflow hidden
    .banner-content
      width 1200px
      height 100%
      margin 0 auto
      .banner-box
        width 100%
        height 100%
        position relative
        left -360px
        top 0
        .banner-contentBox
          width 1920px
          height 100%
          .background-item
            iBlock()
            width 100%
            height 100%
            background-position center
            background-size cover
            background-repeat no-repeat
          .background-item[lazy=loading]
            background-size auto
          .background-item[lazy=error]
            background-size auto
    .click-btn
      display none
    &:hover
      .click-btn
        display block
      .swiper-pagination
        bottom 10px
        left 50%
.wlbidding-content
  width 1200px
  margin 0 auto
  height auto
  position relative
  top -86px
  z-index 999
  .wlbidding-center
    width 100%
    height auto
    margin-bottom 50px
    overflow hidden
    .wlbidding-con
      width 1250px
      overflow hidden
      .wlbidding-box
        width 570px
        height 220px
        box-shadow 0 0 5px 5px #ccc
        float left
        margin 5px 40px 40px 5px
        padding 0 30px
        box-sizing border-box
        position relative
        .box-title
          height 78px
          padding 6px 0 0 50px
          box-sizing border-box
          line-height 72px
          color #333
          font-size 18px
          background url("resource/icon_car.png") no-repeat left center
          &:hover
            cursor pointer
            mainColor()
        .box-content
          font-size 14px
          color #808080
          line-height 22px
        .time
          position absolute
          bottom 30px
          font-size 14px
          color #b3b3b3

    .page-wrapper
      margin-bottom 30px
      .page-content
        width 1180px
        height 24px
        text-align center
        font-size 0
        .changePage
          display inline-block
          vertical-align top
          width auto
          height 100%
          padding 0 5px
          font-size 12px
          color #fff
          mainBack()
          text-align center
          line-height 24px
          border-radius 1px
          cursor pointer
          &.end
            background #e9e9e9
            color #666
            border-radius 1px
            cursor default
        .pageFlag
          display inline-block
          vertical-align top
          padding 0 10px
          font-size 12px
          color #999
          line-height 24px
        .linkPage
          display inline-block
          vertical-align top
          width auto
          height 100%
          .entry-wrapper
            display inline-block
            vertical-align top
            width 50px
            height 100%
            box-sizing border-box
            border 1px solid #e1e1e1
            margin-left 20px
            .entry
              width 100%
              height 100%
              border none
              text-align center
          .tag
            display inline-block
            vertical-align top
            padding 0 5px
            line-height 24px
            color #999
            font-size 12px
            cursor default
          .confirm
            display inline-block
            height 100%
            padding 0 10px
            mainBack()
            color #fff
            font-size 12px
            line-height 24px
            margin-left 15px
            border-radius 1px
            cursor pointer
