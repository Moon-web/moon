          height 100px
          margin-bottom 50px
          .warn
            iBlock()
            width 100%
            height auto
            font-size 12px
            color #999
            margin-top 20px
          .billTitle-item
            width 310px
            height 137px
            float left
            margin-right 10px
            box-sizing border-box
            padding 0 10px
            color #b3b3b3
            overflow hidden
            margin-bottom 10px
            cursor pointer
            position relative
            &:before
              content ''
              width 310px
              height 137px
              position absolute
              top 0
              left 0
              background-repeat no-repeat
              background-position center
              background-image url("resource/icon_unfocusTitle.png")
            &.active
              &:before
                background-image url("resource/img_focusTitle.png")
            .billTitle-head
              width 100%
              height 30px
              box-sizing border-box
              border-bottom 1px dashed #e1e1e1
              line-height 30px
              font-size 12px
              color #333
              limit()
            .billTitle-information
              display block
              width 100%
              height 107px
              .information-item
                width 100%
                height auto
                font-size 12px
                color #333
                margin-top 7px
