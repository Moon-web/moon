        .other-information
          .text
            width 440px
            height 140px
            border 1px solid #e1e1e1
            padding 10px
            box-sizing border-box
            outline none
            color #333


      .product
        height auto
        width 100%
        padding 0 20px
        box-sizing border-box
        .product-title
          line-height 1em
          font-size 16px
          color #333
          margin-top 30px
          margin-bottom 20px
          font-weight bold
    .confirm
      float right
      width 380px
      margin-top 20px
      .confirm-information
        border 2px solid #f35833
        box-sizing border-box
        width 100%
        height auto
        padding-right 15px
        .total-money
          height 45px
          line-height 45px
          font-size 12px
          color #333
          font-weight 600
          text-align right
          .money
            font-size 24px
            color #f35833
        .address
          line-height 19px
          font-size 12px
          color #333
          text-align right
          .endAddress
            display inline-block
            vertical-align top
            width auto
            color #666
            text-align left
        .contacts
          height 25px
          line-height 25px
          font-size 12px
          color #333
          text-align right
          margin-bottom 26px
          .contacts-con
            color #666
      .commit
        float right
        width 180px
        height 38px
        border none
        outline none
        background #f35932
        color #fff
        font-size 16px
        cursor pointer
      .cancel
        float right
        width 180px
        height 38px
        border none
        outline none
        background-color #666
        color #e1e1e1
        font-size 16px
        cursor pointer
  .create-address
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 20
    background-color rgba(0,0,0,0.5)
    .created
      width 800px
      height 454px
      position absolute
      top 50%
      left 50%
      margin-top -231px
      margin-left -408px
      border 8px solid rgba(0,0,0,0.2)
      cursor default
      .created-center
        width 100%
        height 100%
        background-color #fff
        box-sizing border-box
        padding 0 12px 0 12px
        .created-head
          width 100%
          height 42px
          color #333
          font-size 14px
          font-weight bold
          line-height 42px
          box-sizing border-box
          padding 0 10px
          border-bottom 1px dotted #e1e1e1
          overflow hidden
          .close
            float right
            width 42px
            height 100%
            background-repeat no-repeat
            background-position center
            background-image url("resource/icon_close.png")
            cursor pointer

        .created-content
          width 100%
          height auto
          box-sizing border-box
          padding-top 30px
          .created-ul
            display block
            width 450px
            height auto
            margin 0 auto
            font-size 0
            .created-item
              display inline-block
              vertical-align top
              width 100%
              height 30px
              line-height 30px
              margin-bottom 12px
              .created-title
                display inline-block
                vertical-align top
                width 72px
                height 100%
                color #333
                font-size 12px
                text-align right
                &:before
                  content '*'
                  display inline-block
                  vertical-align top
                  width auto
                  height auto
                  color #f35833
                  margin-top 2px
                  margin-right 1px


              .created-information
                display inline-block
                vertical-align top
                width 378px
                height 100%
                box-sizing border-box
                .entry-text
                  width 194px
                  height 28px
                  box-sizing border-box
                  border 1px solid #ccc
                  text-indent 10px
                  color #666
                  font-size 12px
                  &.long
                    width 324px
                .choice-type
                  display inline-block
                  vertical-align top
                  width 90px
                  height 28px
                  margin-top 1px
                  box-sizing border-box
                  border 1px solid #ccc
                  text-align center
                  line-height 28px
                  color #ccc
                  font-size 12px
                  cursor pointer
                  user-select none
                  &.active
                    position relative
                    color #333
                    &:before
                      content ''
                      position absolute
                      top -1px
                      left -2px
                      right 0
                      bottom -1px
                      background-repeat no-repeat
                      background-image url("resource/icon_address_type.png")
                      z-index 2
                  &:first-child
                    margin-right 14px


                .select
                  margin-right 1px

          .save-address
            width 100%
            height auto
            margin-top 20px
            font-size 0
            text-align center
            .save-button
              display inline-block
              vertical-align top
              width 100px
              height 30px
              color #fff
              mainBack()
              text-align center
              line-height 30px
              border-radius 3px
              font-size 14px
              cursor pointer



