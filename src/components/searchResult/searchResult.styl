@import "../../common/common.styl"
.search-result
  width 100%
  height auto
  .center-wrapper
    width 1200px
    height auto
    margin 0 auto
    .search-filter
      padding 30px 0
      .search-filterTop
        width 100%
        height auto
        border 1px solid #e1e1e1
        .search-filterTopHot
          height 40px
          box-sizing border-box
          border-bottom 1px solid #e1e1e1
          line-height 39px
          .search-filterTopHotLeft
            width 110px
            font-size 12px
            color #888
            background #f7f7f7
            padding-left 20px
            box-sizing border-box
            float left
          .search-filterTopHotRight
            float left
            width 1085px
            height 100%
            overflow hidden
            .search-filterList
              width 100%
              height 40px
              .search-filterList-item
                float left
                padding 0 20px
                font-size 12px
                color #333
                cursor pointer
                &:hover
                  mainColor()
                &.search-filterList-item-active
                  mainColor()

        .search-filterTopPrice
          height 40px
          line-height 40px
          .search-filterTopPriceLeft
            width 110px
            font-size 12px
            color #888
            background #f7f7f7
            padding-left 20px
            box-sizing border-box
            float left
          .search-filterTopPriceRight
            float left
            width 1085px
            height 100%
            .search-filterList
              width 100%
              height 40px
              .search-filterList-item
                float left
                padding 0 20px
                font-size 12px
                color #333
                cursor pointer
                &:hover
                  mainColor()
                &.search-filterList-item-active
                  mainColor()
        .search-provincial
          border-top 1px solid #e1e1e1
          .search-filterTopPriceRight
            .search-filterList
              .search-filterList-item
                padding-right 26px
              .search-filterList-item-active
                mainColor()
      .search-filterBottom
        width 100%
        height 38px
        box-sizing border-box
        border 1px solid #e1e1e1
        margin-top 30px
        overflow hidden
        font-size 0
        .tag
          display inline-block
          vertical-align top
          width 60px
          height 100%
          text-align center
          line-height 36px
          font-size 14px
          color #fff
          mainBack()
        .search-button
          vertical-align top
          display inline-block
          width auto
          height 100%
          font-size 0
          .search-item
            display inline-block
            padding 0 6px
            height 100%
            font-size 14px
            line-height 36px
            color #333
            cursor pointer
            user-select none
            border-right 1px solid #e1e1e1
            &:after
              content ''
              display inline-block
              vertical-align top
              width 9px
              height 100%
              background-repeat no-repeat
              background-position center
              margin-left 7px
            &.unActive:after
              background-image url("resource/sort_down.png")
            &.active:after
              background-image url("resource/sort_up.png")

        .search-input
          display inline-block
          vertical-align top
          width auto
          height 100%
          margin-left 38px
          .input-item
            display inline-block
            vertical-align top
            width 80px
            height 22px
            box-sizing border-box
            border 1px solid #e1e1e1
            margin-top 7px
            &:before
              content '¥'
              display inline-block
              vertical-align top
              width 19px
              height 100%
              text-align center
              line-height 20px
              color #666
              font-size 12px

            .entry
              display inline-block
              vertical-align top
              width 59px
              border none
              line-height 20px
              font-size 12px


          .place
            display inline-block
            vertical-align top
            width auto
            height 100%
            line-height 38px
            font-size 14px
            color #666
            margin 0 4px

        .search-confirm
          display inline-block
          vertical-align top
          width 52px
          height 22px
          color #fff
          font-size 14px
          text-align center
          line-height 22px
          mainBack()
          border-radius 1px
          cursor pointer
          margin-top 7px
          margin-left 10px
        .serach-ImgStyle
          display inline-block;
          height 100%
          margin-left 20px
          border-left 1px solid #e1e1e1
          cursor pointer
          .serach-bigImg
            display inline-block
            box-sizing border-box
            border-right 1px solid #e1e1e1
            text-align center
            width 70px;
            height 100%
            color #333
            font-size 12px
            line-height 36px
            padding-left 15px
            background url("resource/icon_up_datu.png") no-repeat 10px center
          .search-BigImgS
            background url("resource/icon_down_datu.png") no-repeat 10px center
            color #e68111
          .search-ImgList
            display inline-block
            box-sizing border-box
            border-right 1px solid #e1e1e1
            text-align center
            width 70px;
            height 100%
            color #333
            font-size 12px
            line-height 36px
            padding-left 15px
            background url("resource/icon_up_liebiao.png") no-repeat 10px center
          .search-ImgLists
            background url("resource/icon_down_liebiao.png") no-repeat 10px center
            color #e68111
    .result-content
      width 100%
      height auto
      .result-boxOther
        margin-bottom 40px
      .result-box
        width 100%
        height auto
        font-size 0
        .result-item
          display inline-block
          vertical-align top
          width 220px
          height 352px
          box-sizing border-box
          border 1px solid #e1e1e1
          margin-right 20px
          margin-bottom 20px
          cursor default
          position relative
          .border-wrapper
            display none
          &:hover
            .border-wrapper
              display block
          &:nth-child(5n+1)
            margin-left 10px
          &:nth-child(5n+5)
            margin-right 0
          .picture
            margin-top 3px
            margin-left 3px
            width 212px
            height 212px
            overflow hidden
            box-sizing border-box
            border 1px solid #d7d8dd
            background-position center
            background-repeat no-repeat
            background-size cover
            cursor pointer
          .picture[lazy=loading]
            background-size contain
          .picture[lazy=error]
            background-size contain
          .context
            width 100%
            padding 0 5px 5px 5px
            box-sizing border-box
            height auto
            .context-top
              width 100%
              height auto
              box-sizing border-box
              padding 0 5px
              font-size 0
              .price
                display inline-block
                vertical-align top
                font-size 18px
                color #ff9c00
                margin-top 10px
                &:before
                  content '￥'
                  font-size 12px
                  color #ff9c00
              .describe
                display inline-block
                vertical-align top
                width 100%
                height auto
                margin-top 10px
                .advantage
                  display inline-block
                  vertical-align top
                  width 100%
                  font-size 12px
                  color #333
                  overflow hidden
                  text-overflow ellipsis
                  white-space nowrap
                .company
                  display inline-block
                  vertical-align top
                  width 100%
                  height 16px
                  font-size 12px
                  line-height 16px
                  margin-top 10px
                  color #999
                  overflow hidden
                  &:after
                    content ''
                    display inline-block
                    width 17px
                    height 100%
                    float right
                    background-repeat no-repeat
                    background-position center
                    background-image url("resource/search_bg.jpg")
                    margin-right 13px
                  .text
                    display inline-block
                    vertical-align top
                    line-height 16px
                    max-width 12em
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
            .context-bot
              width 210px
              height 44px
              margin-top 15px
              padding 5px
              box-sizing border-box
              border-top 1px solid #e1e1e1
              line-height 33px
              font-size 12px
              .now-buy
                float left
                width 80px
                height 24px
                mainBack()
                font-size 14px
                color #fff
                text-align center
                line-height 24px
                margin-top 5px
                cursor pointer
              .monthVolume
                float right
                width 120px
                text-align  right
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                color #999
                .num
                  color #c87d59
                  font-weight 600
        .result-boxList
          width 100%
          height auto
          overflow hidden
          padding 14px 0
          box-sizing border-box
          border-top 1px solid #e1e1e1
          &.result-boxListTopNone
            border-top none
          .result-boxListLeft
            float left
            width 114px
            height 114px
            border-radius 4px
            border 1px solid #e1e1e1
            box-sizing border-box
            margin-right 16px
            .result-boxListLeftImg
              display block
              width 100%
              height 100%
              background-position center
              background-repeat no-repeat
              background-size cover
            .result-boxListLeftImg[lazy=loading]
              background-size contain
            .result-boxListLeftImg[lazy=error]
              background-size contain
          .result-boxListRight
            float left
            width 1070px
            height auto
            .result-boxListPrice
              width 100%
              height 42px
              line-height 42px
              .result-boxList-DetailPrice
                float left
                line-height 42px
                font-size 18px
                color #ff9c00
              .esult-boxList-monthVolume
                float right
                font-size 14px
                color #999
            .esult-boxList-productName
              height 30px
              line-height 30px
              font-size 14px
              color #333
            .esult-boxList-btn
              margin-top 8px
              height 26px
              width 90px
              line-height 26px
              font-size 12px
              text-align center
              cursor pointer
              color #ffff
              background #ff9c00
    .page-wrapper
      margin-bottom 30px
      .page-content
        width 1180px
        height 24px
        text-align center
        font-size 0
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        .changePage
          display inline-block
          vertical-align top
          width auto
          height 100%
          padding 0 5px
          font-size 12px
          color #fff
          mainBack()
          text-align center
          line-height 24px
          border-radius 1px
          cursor pointer
          &.end
            background #e9e9e9
            color #666
            border-radius 1px
            cursor default
        .pageFlag
          display inline-block
          vertical-align top
          padding 0 10px
          font-size 12px
          color #999
          line-height 24px
        .linkPage
          display inline-block
          vertical-align top
          width auto
          height 100%
          .entry-wrapper
            display inline-block
            vertical-align top
            width 50px
            height 100%
            box-sizing border-box
            border 1px solid #e1e1e1
            margin-left 20px
            .entry
              width 100%
              height 100%
              border none
              text-align center
          .tag
            display inline-block
            vertical-align top
            padding 0 5px
            line-height 24px
            color #999
            font-size 12px
            cursor default
          .confirm
            display inline-block
            height 100%
            padding 0 10px
            mainBack()
            color #fff
            font-size 12px
            line-height 24px
            margin-left 15px
            border-radius 1px
            cursor pointer
