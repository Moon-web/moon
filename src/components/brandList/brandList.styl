@import "../../common/common.styl"
.brandList-con
  width 100%
  height auto
  background #f5f5f5
  padding-top 20px
  box-sizing border-box
  mainTopBorder(3px,solid)
  .brandList-center
    width 1200px
    height auto
    margin 0 auto
    .path
      width 100%
      height auto
      font-size 14px
      color #333
      margin-bottom 30px
    .brand-item
      width 100%
      overflow hidden
      height auto
      .item-con
        width 110%
        overflow hidden
        .item-list
          width 224px
          height 290px
          border 1px solid #e1e1e1
          box-sizing border-box
          margin 0 20px 20px 0
          float left
          background #fff
          position relative
          .item-logo
            position absolute
            top 56px
            left 42px
            width 140px
            height 50px
            background-repeat no-repeat
            background-size cover
            background-position center
          .item-logo[lazy=loading]
            background-size contain
          .item-logo[lazy=error]
            background-size contain
          .item-name
            position absolute
            top 120px
            left 0px
            width 100%
            height 36px
            line-height 36px
            font-size 18px
            color #333
            text-align center
            box-sizing border-box
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            padding 0 15px
          .item-con
            position absolute
            left 0px
            top 156px
            width 100%
            height 16px
            line-height 16px
            font-size 14px
            text-align center
            color #999
            box-sizing border-box
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            padding 0 15px
          .detail
            position absolute
            width 130px
            height 36px
            left 47px
            bottom 50px
            cursor pointer
            .left
              position absolute
              left 0px
              top 0px
              width 20%
              height 100%
              background #ff9500
              border-radius 60%
            .sdetail
              position absolute
              left 10%
              top 0px
              width 80%
              height 100%
              background #ff9500
              color #fff
              z-index 3
              text-align center
              line-height 36px
            .right
              width 20%
              height 100%
              position absolute
              right 0px
              top 0
              background #ff9500
              border-radius 60%



      .page-wrapper
        margin-bottom 30px
        .page-content
          width 1180px
          height 24px
          text-align center
          font-size 0
          .changePage
            display inline-block
            vertical-align top
            width auto
            height 100%
            padding 0 5px
            font-size 12px
            color #fff
            mainBack()
            text-align center
            line-height 24px
            border-radius 1px
            cursor pointer
            &.end
              background #e9e9e9
              color #666
              border-radius 1px
              cursor default
          .pageFlag
            display inline-block
            vertical-align top
            padding 0 10px
            font-size 12px
            color #999
            line-height 24px
          .linkPage
            display inline-block
            vertical-align top
            width auto
            height 100%
            .entry-wrapper
              display inline-block
              vertical-align top
              width 50px
              height 100%
              box-sizing border-box
              border 1px solid #e1e1e1
              margin-left 20px
              .entry
                width 100%
                height 100%
                border none
                text-align center
            .tag
              display inline-block
              vertical-align top
              padding 0 5px
              line-height 24px
              color #999
              font-size 12px
              cursor default
            .confirm
              display inline-block
              height 100%
              padding 0 10px
              mainBack()
              color #fff
              font-size 12px
              line-height 24px
              margin-left 15px
              border-radius 1px
              cursor pointer

